# Django Settings
SECRET_KEY="your-django-secret-key-here"
DEBUG=True
DJANGO_SETTINGS_MODULE=loopin_backend.settings.dev

# Database Configuration - Supabase PostgreSQL (Transaction Pooler)
# Use Supabase Connection Pooler in Transaction mode for best compatibility with Render
# Get this from: Supabase Dashboard > Database > Connection Pooling > Transaction mode
# Format: postgresql://postgres.[PROJECT_REF]:PASSWORD@aws-X-REGION.pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres.your-project-ref:your-password@aws-1-us-east-2.pooler.supabase.com:6543/postgres"

# JWT Settings
JWT_SECRET_KEY="your-jwt-secret-key-here"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SID=your-twilio-verify-sid
TWILIO_VERIFY_SECRET=your-twilio-verify-secret
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Twilio Test Mode (set to false for production)
TWILIO_TEST_MODE=true
