root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx,json,css,scss,html,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{py,pyi}]
max_line_length = 88
indent_size = 4

[*.{sh,bash}]
end_of_line = lf
