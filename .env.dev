# Development Environment Configuration
# This file contains development-specific settings

# Django Settings
SECRET_KEY=dev-secret-key-not-for-production
DEBUG=True
DJANGO_SETTINGS_MODULE=loopin_backend.settings.dev

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:password@postgres:5432/loopin

# JWT Settings
JWT_SECRET_KEY=dev-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Twilio Configuration (Test Mode)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15005550006
TWILIO_MESSAGING_SERVICE_SID=your-messaging-service-sid
TWILIO_TEST_MODE=true

# CORS Settings (Development)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Redis Configuration (Local)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# PostHog Analytics (Development)
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# AI Services (Disabled in Development)
AI_SERVICES_ENABLED=false
OPENAI_API_KEY=your-openai-api-key

# Email Configuration (Console Backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# File Storage (Local)
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Logging Configuration (Verbose)
LOG_LEVEL=DEBUG
LOG_FILE=logs/django.log

# Security Settings (Relaxed for Development)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
